extends layout

block content
  .page-header
    h1= postSent.title

    style.
       body{
               background: url("http://holographer.org/theme/holographer.org/assets/img/slideshow/slide2.jpg") no-repeat center center fixed;
               background-size: cover;

       }


    style.
        table, th, td {
        border-collapse: collapse;
        border-bottom-color: rgb(211, 202, 221);
        border-top-color: rgb(211, 202, 221);
        }
        table {
            margin: auto;
            border-spacing: 0;
        }
        th, td {
        padding: 5px 10px;

        font-size: 12px;
        font-family: Verdana;
        color: rgb(95, 74, 121);
        border-top-width: 1px;
        border-top-style: solid;
        }
        tr:nth-child(even) {
        background: rgb(223, 216, 232)
        }
        tr:nth-child(odd) {
        background: #FFF
        }
        .container{
        width:1000px;
        margin:0 auto;
        }

        .tab{
        margin:0 auto;
        max-width: 100%;
        height: 200px;
        }
  .container


    .tab

      table

        tr

            th Photo
            th Title
            th Address
            th Number of Tenants
            th Price
            th Posting Date
            tr
                td
                    img(src='' + image + '', alt="photo", style="width:120px;height:100px;")
                td= postSent.title
                td= postSent.adress.address + "   " + postSent.adress.city + " " + postSent.adress.zip
                td= postSent.numPeople
                td= postSent.price
                td= postSent.postingDate